np,
iserialno from T 
group by iserialno, np)
where (retirement+interest+wages+assist+ss+disability+sinc)
< 
(POWER( np, 5)*3.7481 -
70.284 * power(np,4) +
413.55 * power(np,3) 
- 609.44 * power(np,2) +
2871.7*np + 9144.7)), (select Count(distinct serialNo) as denom from T);
